<div class="col-md-4">
<form action='/<%= idea.id %>' method='POST'>
  <p>
    <% if idea.id %>
      Edit your Idea:
    <% else %>
      Your Idea:
    <% end %>
  </p>
  <% if idea.id %>
    <input type="hidden" name="_method" value="PUT" />
  <% end %>
  <input type='text' name='idea[title]' value="<%= idea.title %>"/>Title<br/>
  <textarea name='idea[description]'><%= idea.description %></textarea>Description<br/>
  <textarea name='idea[tags]'><%= idea.tags %></textarea> Tag<br/>
 
  <select name="group">
   <option value="No Group">No Group</option>
   <option value="Home and Garden">Home and Garden</option>
   <option value="Travel">Travel</option>
   <option value="Leisure">Leisure</option>
   <option value="School">School</option>
   <option value="Culinary">Culinary</option>
   <option value="Fitness and Health">Fitness and Health</option>
  </select><br/>
  <input type='submit'/>
  </form>
 </div>
  <%unless idea.id %>

<form action='/search' method='GET'>
